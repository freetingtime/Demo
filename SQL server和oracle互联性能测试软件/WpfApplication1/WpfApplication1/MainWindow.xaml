<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl Padding="0" Margin="30,0,30,30" >
            <TabItem>
                <TabItem.Header>
                   测试 .net从oracle取数据的效率
                </TabItem.Header>
                <ScrollViewer>
                    <HeaderedContentControl>
                        <TextBox x:Name="testResult"></TextBox>
                    </HeaderedContentControl>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    测试sql server从oracle取数据的效率
                </TabItem.Header>
                <ScrollViewer>
                    <HeaderedContentControl>
                        <TextBox x:Name="testResult2"></TextBox>
                    </HeaderedContentControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
